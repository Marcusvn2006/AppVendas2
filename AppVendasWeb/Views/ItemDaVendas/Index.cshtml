@model IEnumerable<AppVendasWeb.Models.ItemDaVenda>

@{
    ViewData["Title"] = "ItemDasVendas";
}

<h1 class="display-5 text-light my-5 text-dark">Item Das Vendas</h1>

<p>
    <a asp-action="Create" class="btn btn-lg btn-outline-dark d-inline-flex align-items-center">
        <svg class="me-3" bootstrap-icon="PlusLg" width="16" height="16" aria-label="Alarms"></svg>Adicionar
    </a>
</p>
<table class="table" style=" background:#50623A; color:white;">
    <thead style="background:#789461">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venda.NotaFiscal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    <a asp-action="Create" asp-controller="ItemDaVenda" asp-route-id="@item.VendaId"> <svg class="mx-3" bootstrap-icon="PencilFill" width="24" height="24" aria-label="PencilFill"></svg></a> |

                    <a asp-action="Edit" asp-route-id="@item.VendaId"><svg class="mx-3" bootstrap-icon="CardText" width="24" height="24" aria-label="CardText"></svg></a> |

                    <a asp-action="Delete" asp-route-id="@item.VendaId"> <svg class="mx-3" bootstrap-icon="Trash" width="24" height="24" aria-label="Trash2Fill"></svg></a>
                </td>
            </tr>
        }
    </tbody>
</table>
